<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sea_blue_grad">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/cherry_grad" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:tint="#FFFFFF"
                app:srcCompat="@drawable/ic_whatshot_black_24dp" />

            <android.support.v7.widget.CardView
                android:layout_width="300dp"
                android:layout_height="330dp"
                style="@style/AppTheme.NoActionBar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="160dp"
                android:elevation="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="LogMeIN"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:textStyle="normal"
                        android:text="LogIn For Nothing"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_person_black_24dp"
                            android:drawableTint="@color/cherry_end"
                            android:hint="Email"
                            android:inputType="textEmailAddress" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_lock_black_24dp"
                            android:drawableTint="@color/cherry_start"
                            android:hint="Password"
                            android:inputType="textVisiblePassword" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="13sp"
                        android:layout_marginTop="20dp"
                        android:textStyle="italic"
                        android:text="Don't have an account yet ? Click here."/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="460dp"
                android:background="@drawable/rounded_button"
                android:elevation="5dp"
                android:padding="10dp"
                android:text="Login"
                android:clickable="true"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:text="An app by mebzjohnson"
                android:textColor="#FFFFFF"
                android:typeface="monospace" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>